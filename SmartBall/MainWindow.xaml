<Window x:Class="SmartBall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartBall"
        xmlns:uc="clr-namespace:SmartBall.UserControls"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Умный шарик" Height="480" Width="800" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Menu>
                <MenuItem Header="Программа"/>
                <MenuItem Header="Справка">
                    <MenuItem Header="Руководство пользователя"/>
                    <MenuItem Header="О программе"/>
                </MenuItem>
            </Menu>
        </Grid>

        <Grid Grid.Row="1" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="0.8*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0 0 2 0">
                <uc:Ruler/>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.6*"/>
                    <RowDefinition Height="0.2*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0 0 0 2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Padding="6 4 6 4"
                               FontSize="16"
                               FontWeight="Bold"
                               Background="LightBlue"
                               Foreground="#232323">
                        Задание
                    </TextBlock>

                    <TextBlock Grid.Row="1"
                               Padding="6 4 6 4"
                               FontSize="14">
                        Составьте слово
                    </TextBlock>
                </Grid>

                <Grid Grid.Row="1" Margin="0 0 0 2">
                    <ScrollViewer>
                        <TextBox
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="4"
                            Padding="4"
                            FontSize="18"
                            AcceptsReturn="True">
                            Тут будет ввод команд
                        </TextBox>
                    </ScrollViewer>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="MaterialDesignIconButton"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Padding="8 4 8 4"
                            FontSize="14"
                            Margin="0 0 32 0"
                            Background="LightBlue">
                        <materialDesign:PackIcon Kind="Play" />
                    </Button>
                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Center"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#232323">
                        Полученное слово будет тут
                    </TextBlock>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
